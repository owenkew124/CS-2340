<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.GameApplication">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER" spacing="0.0" xmlns:fx="http://javafx.com/fxml">
        <Label fx:id = "name"/>
        <Text text="Name "/>
        <TextField fx:id="nameField"/>
        <Label fx:id="submitName"/>
        <Button text="Enter" onAction="#takeName"/>
    </HBox>

    <HBox alignment="CENTER" spacing="0.0" xmlns:fx="http://javafx.com/fxml">
        <Label fx:id="d1"/>
        <Button text="Easy" onAction="#easy"/>
        <Label fx:id="d2"/>
        <Button text="Medium" onAction="#medium"/>
        <Label fx:id="d3"/>
        <Button text="Hard" onAction="#hard"/>
    </HBox>

    <HBox alignment="CENTER" spacing="0.0" xmlns:fx="http://javafx.com/fxml">
        <Label fx:id="confirm"/>
        <Button text="Confirm" onAction="#confirm"/>
        <Label fx:id="quit"/>
        <Button text="Quit" onAction="#quit"/>
    </HBox>
</VBox>
